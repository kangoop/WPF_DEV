    <Grid>
        <ListBox ItemsSource="{Binding employees}" >
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Height="35" Width="250" Grid.RowSpan="2">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <TextBox Text="Employee:" FontWeight="Bold" Grid.Column="0" Height="Auto"></TextBox>
                            <TextBox Text="{Binding Path=EmployeeName}" Grid.Column="1" HorizontalAlignment="Left"></TextBox>
                        </Grid>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid> 
