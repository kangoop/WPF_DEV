<Window x:Class="WPF5_DAY1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF5_DAY1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <StackPanel>
                <DockPanel Margin="50" >
                    <TextBox x:Name="txtFName1" Width="150" DockPanel.Dock="Top" Margin="0,0,0,5" ToolTip="TEXTBOX1" 
                             Text="{ Binding Mode=OneWay}"  />
                    <TextBox x:Name="txtFName2" Width="150" DockPanel.Dock="Top" Margin="0,0,0,5" ToolTip="TEXTBOX2"
                             Text="{ Binding Mode=OneWay}"/>
                    <TextBox x:Name="txtFName3" Width="150" DockPanel.Dock="Top" Margin="0,0,0,5" ToolTip="TEXTBOX3"
                             Text="{ Binding Mode=OneWay}"/>
                </DockPanel>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
