<Window x:Class="WPF2_5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF2_5"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Button Height="40" Width="100" Content="Exit" Margin="40" ToolTip="This is a tooptip!"/>

            <Button Height="40" Width="100" Content="Save" Margin="80">
                <Button.ToolTip>
                    <ToolTip Background="Red" Foreground="White">
                    Clicking this button wiil save your data
                    </ToolTip>
                </Button.ToolTip>
            </Button>
        </StackPanel>
    </Grid>
</Window>
