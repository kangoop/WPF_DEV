<Window x:Class="EX1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EX1"
        mc:Ignorable="d"
        Title="MainWindow" Height="900" Width="1600">
    <Grid>
        <StackPanel>
            <Button HorizontalAlignment="Center" Background="Yellow" FontSize="22">Left</Button>
            <Button HorizontalAlignment="Left" Background="Yellow" FontSize="22">Left</Button>
            <Button HorizontalAlignment="Right" Background="Yellow" FontSize="22">Left</Button>
            <Button Background="Yellow" FontSize="22"> Stretch </Button>
            <Button VerticalAlignment="Bottom" FontSize="22" Background="Yellow">Bottom</Button>
        </StackPanel>

        <DockPanel>
            <Button HorizontalAlignment="Left" VerticalAlignment="Top" Background="Yellow" FontSize="22">
                Top
            </Button>
         </DockPanel>
    </Grid>
</Window>
